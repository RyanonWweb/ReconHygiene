---
import type { CollectionEntry } from 'astro:content';

interface Props {
  hunt: CollectionEntry<'hunts'>;
}
const { hunt } = Astro.props;
const { title, date, summary, tactic, technique, severity, tags } = hunt.data;

const severityMap: Record<string, string> = {
  low: 'badge-green',
  medium: 'badge-yellow',
  high: 'badge-red',
  critical: 'badge-critical',
};

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric', month: 'short', day: 'numeric'
});
---

<a href={`/hunts/${hunt.id.replace(/\.mdx?$/, '')}`} class="hunt-card glass glow-hover">
  <div class="hunt-card-header">
    <span class={`badge ${severityMap[severity] ?? 'badge-gray'}`}>
      {severity}
    </span>
    <time datetime={date.toISOString()} class="hunt-date">{formattedDate}</time>
  </div>

  <h3 class="hunt-title">{title}</h3>
  <p class="hunt-summary">{summary}</p>

  <div class="hunt-meta">
    <div class="hunt-tags">
      <span class="tag">{tactic}</span>
      <span class="tag">{technique}</span>
      {tags.slice(0, 2).map(t => <span class="tag">{t}</span>)}
    </div>
    <span class="hunt-cta">Read report â†’</span>
  </div>
</a>

<style>
  .hunt-card {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }
  .hunt-card:hover { transform: translateY(-2px); opacity: 1; }
  .hunt-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }
  .hunt-date {
    font-size: 0.78rem;
    color: var(--text-muted);
    font-family: 'JetBrains Mono', monospace;
  }
  .hunt-title {
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--text);
    line-height: 1.4;
    margin: 0;
  }
  .hunt-summary {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .hunt-meta {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }
  .hunt-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }
  .hunt-cta {
    font-size: 0.8rem;
    color: var(--cyan);
    white-space: nowrap;
    font-weight: 500;
    opacity: 0;
    transition: opacity 0.2s;
  }
  .hunt-card:hover .hunt-cta { opacity: 1; }
</style>
